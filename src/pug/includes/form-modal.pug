.modal
  .modal__close--btn(title='Close')
    i(class='far fa-times-circle')
      
  h1(class='modal__title') Layout Options
  
  form(class='modal__form' action='' method='' autocomplete='off' id='settings-form')
    
    label(for='select-template' class='modal__form--label') Select Templat
    select(class='modal__form--select' id='select-template' name='templates' required)
      option(value='template-0') Default
      option(value='template-1') Template-1
      option(value='template-2') Template-2
      option(value='template-3') Template-3
      option(value='template-4') Template-4
      
    label(for='select-background-image' class='modal__form--label') Select Background Image
    select(class='modal__form--select' id='select-background-image' name='background-image' required)
      option(value='0') Default
      option(value='1') Background Image 1
      option(value='2') Background Image 2
      option(value='3') Background Image 3

    label(for='select-table-background-color' class='modal__form--label') Select Table Background Color
    select(class='modal__form--select' id='select-table-background-color' name='table-background-color' required)
      option(value='0') Default
      option(value='1') Red
      option(value='2') Green
      option(value='3') Blue

    label(class='modal__form--label') Navigation Links (sort by drag'n drop)
    span.modal__form--label--helpertext * Current links order in the navigation
    ul(class='modal__form--list')
      
    button(class='modal__form--btn') Change
